<?xml version="1.0" encoding="utf-8"?>

<configuration>

  <!-- Configuracion de conexion a base de datos -->
  <connectionStrings>
    <add name="ITELConnectionString" connectionString="Data Source=CLAU-NOTEBOOK\MYSQLSERVER;Initial Catalog=ITEL;Integrated Security=True"
      providerName="System.Data.SqlClient" />
  </connectionStrings>

  <system.web>
    <compilation debug="false" targetFramework="4.6.1" />
    <httpRuntime targetFramework="4.6.1" />

    <authentication mode="Forms">
      <forms cookieless="UseCookies" loginUrl="login.aspx"
         defaultUrl="administrar.aspx" timeout="2" slidingExpiration="true"/>
    </authentication>
  
    <authorization>
      <allow users="?"/>
    </authorization>
  </system.web>

  <location path="administrar.aspx">
    <system.web>
      <authorization>
        <deny users="?"/>
      </authorization>
    </system.web>
  </location>

</configuration>
